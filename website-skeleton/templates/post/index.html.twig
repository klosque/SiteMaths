

{% extends 'base.html.twig' %}


{% block title %} <h1>Liste des Inscrits</h1>{% endblock %}
{% block stylesheets %}
        <link href="/CSS/maths.css" type="text/css" rel="stylesheet" />
   {% endblock %}

{% block body %}
   
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Tel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.nom }}</td>
                <td>{{ post.prenom }}</td>
                <td>{{ post.tel }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('post_show', {'id': post.id}) }}">show</a>
                
                    <a class="btn btn-warning" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}

